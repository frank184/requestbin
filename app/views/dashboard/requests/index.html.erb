<h1 class="page-header">
  <div class="container-fluid header-container" >
    <div class="row">
      <div class="col-xs-8">
        Requests
      </div>
      <div id="form" class="col-xs-4 text-right">
        <%= link_to 'API Token', tokens_path, class: 'btn btn-lg btn-default' %>
      </div>
    </div>
  </div>
</h1>

<table>
  <thead>
    <tr>
      <th>Headers</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.headers %></td>
        <td><%= request.body %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
